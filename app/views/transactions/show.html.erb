<div class="panel panel-default">
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>merchant</dt>
      <dd><%= @transaction.merchant %></dd>
      <dt>date</dt>
      <dd><%= @transaction.date %></dd>
      <dt>amount</dt>
      <dd><%= @transaction.amount %></dd>
      <dt>note</dt>
      <dd><%= @transaction.note %></dd>
      <% @transaction.tags.any? %>
        <dt>tags</dt>
        <dd>
        <% @transaction.tags.each do |tag| %>
        <span class="col-md-2"><%= link_to tag.name, transactions_tagged_path(:tag => tag.name) %></span>
        </dd>
      <% end %>
    </dl>
  </div>
</div>
