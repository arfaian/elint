<% content_for :head do %>
  <%= stylesheet_link_tag 'users' %>
<% end %>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name),
    html: { class: "form-signin" }) do |f| %>
  <h2 class="form-signin-heading">sign in</h2>
  <div class="form-inputs">
    <%= f.input_field :email, :required => false, :autofocus => true, placeholder: "email",
        pattern: false, label: false %>
    <%= f.input_field :password, :required => false, placeholder: "password", label: false %>
    <%= f.input :remember_me, label: "remember me", :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "go", :class => 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

