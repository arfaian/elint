<!DOCTYPE html>
<%= html_tag :class => "no-js" %>
  <%= render "head" %>

  <body class="<%= controller.controller_name %>">
    <%= render "chromeframe" %>
    <%= render "header" %>

    <div class="container-fluid">
      <div class="row">
        <%= render "sidebar" %>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <%= render "flashes" %>
          <%= yield %>
        </div>
      </div>
    </div>


    <%# render "footer" %>

    <%# Javascript at the bottom for fast page loading %>
    <%= render "javascripts" %>
  </body>
</html>
