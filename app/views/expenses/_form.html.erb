<%= simple_form_for @expense, :html => { :class => 'form-horizontal' } do |f| %>

  <% if notification = f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert" href="#">&times;</a>
      <%= notification %>
    </div>
  <% end %>

  <legend>expense</legend>
  <%= f.input :description, :input_html => { :class => "form-control span6" } %>

  <%= f.input :date, as: :date, start_year: Date.today.year,
                              end_year: Date.today.year,
                              order: [:day, :month, :year] %>

  <%= f.input :cost, :as => :currency, input_html: { class: "form-control",
      type: "number", min: "0.01", step: "0.01", max: "2500" } %>

  <%= f.input :avoidable, :as => :boolean %>

  <%= f.label :tags %>
  <%= f.text_field :tag_list %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger" %>
  </div>

<% end %>
