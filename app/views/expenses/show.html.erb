<div class="panel panel-default">
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>merchant</dt>
      <dd><%= @expense.merchant %></dd>
      <dt>date</dt>
      <dd><%= @expense.date %></dd>
      <dt>cost</dt>
      <dd><%= @expense.cost %></dd>
      <dt>description</dt>
      <dd><%= @expense.description %></dd>
      <% @expense.tags.any? %>
        <dt>tags</dt>
        <dd>
        <% @expense.tags.each do |tag| %>
        <span class="col-md-2"><%= link_to tag.name, expenses_tagged_path(:tag => tag.name) %></span>
        </dd>
      <% end %>
    </dl>
  </div>
</div>
